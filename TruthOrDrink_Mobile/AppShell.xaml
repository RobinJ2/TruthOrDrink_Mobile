<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TruthOrDrink_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TruthOrDrink_Mobile.Pages"
    FlyoutBackgroundColor="#9B4EFF"
    FlyoutWidth="200"
    >

    

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn"
        FlyoutItemIsVisible="False"
        />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp" 
        FlyoutItemIsVisible="False"
        />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" 
        Icon="home_icon.png"
        />

    <ShellContent
        Title="Vragen beheren"
        ContentTemplate="{DataTemplate pages:ManageQuestionsPage}"
        Route="ManageQuestionsPage"
        Icon="edit_icon.png"
        />
    
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="SettingsPage"
        Icon="settings_icon.png"
        />

</Shell>
