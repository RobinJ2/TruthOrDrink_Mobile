<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TruthOrDrink_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TruthOrDrink_Mobile.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="TruthOrDrink_Mobile">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn" 
        IsVisible="True"/>
    
    <ShellContent
    Title="Sign Up"
    ContentTemplate="{DataTemplate pages:SignUpView}"
    Route="SignUp" 
    IsVisible="True"/>

    <ShellContent
    ContentTemplate="{DataTemplate pages:HomePage}"
    Route="HomePage" 
    x:Name="homePageShellContent"
    IsVisible="False"/>

    <MenuItem
    Text="Uitloggen"
    Command="{Binding LogoutCommand}"
    IconImageSource="logout_icon.png" />

</Shell>
