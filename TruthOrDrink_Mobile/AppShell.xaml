<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TruthOrDrink_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TruthOrDrink_Mobile.Pages"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn" 
        IsVisible="True"
        FlyoutItemIsVisible="True"/>

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp" 
        IsVisible="True"
        FlyoutItemIsVisible="True"/>

    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" 
        x:Name="homePageShellContent"
        IsVisible="False"
        FlyoutItemIsVisible="True"/>

    <!--<FlyoutItem Title="Menu">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            FlyoutItemIsVisible="True"/>
        
    </FlyoutItem>-->

    <MenuItem
        Text="Uitloggen"
        Command="{Binding LogoutCommand}"
        />

</Shell>
