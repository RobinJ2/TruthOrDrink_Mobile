<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink_Mobile.Pages.SignUpView"
             Title="Sign Up">
    <VerticalStackLayout>
        <Entry Text="{Binding Email}" />
        <Entry Text="{Binding Username}"/>
        <Entry IsPassword="True" Text="{Binding Password}"/>
        <Button Text="Sign Up" Command="{Binding SignUpCommand}" />
        <Button Command="{Binding NavigateSignInCommand}" Text="Al een account? Login" />
    </VerticalStackLayout>
</ContentPage>