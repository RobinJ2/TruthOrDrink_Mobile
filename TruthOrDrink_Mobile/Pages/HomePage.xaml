<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="TruthOrDrink_Mobile.Pages.HomePage"
             Shell.NavBarIsVisible="False"
             
             Title="">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="Transparent"/>
    </Page.Behaviors>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <!-- Definieer de verloopkleuren -->
            <GradientStop Color="#2E005B" Offset="0.0" />
            <!-- Donkerblauw boven -->
            <GradientStop Color="#9B4EFF" Offset="1.0" />
            <!-- Paars onder -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="30" Spacing="20">
        
        <Label Text="Truth Or Drink" 
               FontSize="38" 
               HorizontalOptions="Center" 
               Margin="0, 20, 0, 20" 
               TextColor="White"/>

        <Label Text="{Binding WelcomeMessage}"
               FontSize="Medium"
               HorizontalOptions="Center" 
               TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>